@model JobOffers.ViewModel.RolesAndUsersViewModel
@{
    ViewBag.Title = "AddRoleToUser";
}

<h2>AddRoleToUser</h2>

@using (Html.BeginForm("AddRoleToUser", "Roles"))
{
   <div class="form-group">
       @Html.DropDownListFor(m => m.UserId, new SelectList(Model.users, "Id", "UserName"), "Select User", new {@class="form-control" })
   </div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.RoleId, new SelectList(Model.roles, "Name", "Name"), "Select Role", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit"  class="btn btn-primary"> Add Role TO User </button>
    </div>
}