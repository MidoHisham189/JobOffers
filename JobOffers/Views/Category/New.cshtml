@model JobOffers.Models.Category
@{
    ViewBag.Title = "New";
}

<h2>New</h2>

@using (Html.BeginForm("Save", "Category"))
{
    <div class="form-group">
        @Html.LabelFor(m=> m.CategoryName)
        @Html.TextBoxFor(m => m.CategoryName, new {@class="form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CategoryDescription)
        @Html.TextAreaFor(m => m.CategoryDescription, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m=> m.CategoryId)
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}