
@{
    ViewBag.Title = "Apply";
}

<h2>Apply</h2>

@*@using(Html.BeginForm("Apply","Home",FormMethod.Post)){


}*@

<div id="Message"></div>
<div class="  form-group">
    <label for="ApplyMessage">Message</label>
    <input type="text" id="ApplyMessage" class="form-control" />
</div>

<div class="form-group">
    <input type="button" id="btnApply" class="btn btn-primary" value="Apply" />
</div>

@section scripts{

    <script>
        $('#btnApply').click(function () {

            $.ajax({
                type: 'Post',
                url: '/Home/Apply',
                data: {
                    Message: $('#ApplyMessage').val()
                },
                success: function (data) {
                    if (data === true) {

                        $('#Message').append('<p class="text-success"> You Aplaied Successfully ! <p>')
                    }
                    else {
                        $('#Message').append('<p class="text-danger">Sorry, You Cant Aplaied For This job becuase You Applied to it before ! <p>')

                    }
                }
            })
        });
    </script>
}